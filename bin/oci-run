#!/bin/bash

: ${FLAVOR="fedora"}
: ${CONTAINER="build"}

./bin/oci-build-container "${FLAVOR}" &>/dev/null

FLAVOR="${FLAVOR}" DEPDIR="build/${FLAVOR}" ./bin/oci-exec run -it --mount type=bind,source=.,destination=/notify --privileged --rm --env-host=true localhost/${FLAVOR}_notify_${CONTAINER}:latest "${@}"
